<br><br><br><br><br>
<div class="well col-xs-8 col-xs-offset-2">
<h1 align="center">Authors</h1>

<% @user.each do |user| %>
 <ul class="listing">
  <div class="row">
   <div class="well col-md-4 col-md-offset-4">
   	<h3><%= user.name %></h3>
    <li><%= pluralize(user.articles.count, "article") if user.articles %></li>
    <%= link_to "Show", user_path(user) ,class: 'btn btn-primary btn-large'  %>
   </div>
  </div>
 </ul>
<% end %>
<%= link_to "Back", articles_path,class: 'btn btn-primary btn-large'   %>
</div>